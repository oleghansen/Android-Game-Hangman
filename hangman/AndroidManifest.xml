<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hangman"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_hangman"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.hangman.STARTSKJERM" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        
                <activity
            android:name=".Startskjerm"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
                
       <activity
            android:name=".Spill"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.hangman.SPILL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
              <activity
            android:name=".Rules"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.hangman.RULES" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
                            <activity
            android:name=".Lang"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.hangman.LANG" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>
